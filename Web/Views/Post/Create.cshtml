@model Web.ViewModels.CreatePostViewModel


<div class="container">
    @Html.ActionLink("Back", "Index", "Post", null, new { @class = "btn btn-primary float-right mb-2" })
    <form method="post" asp-controller="Post" asp-action="Store">
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { placeholder = "Enter Title", @class = "form-control" })
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, "Description")
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Enter Description" })
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>